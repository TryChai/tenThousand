page{
	background: #eee;
}
.padding{
	padding-bottom:19%;
}
/*同城设计师头部*/
.citydesign-top{
	width: 100%;
	/*height: 450rpx;*/
	background: #fff;
	position: relative;
	padding-bottom: 3%;
}
.citydesign-top .position{
	position: absolute;
	top: 5%;
	left: 3%;
	width: 30%;
	background: #fffb90;
	border-radius: 30rpx;
	padding:1% 2%;
}
.citydesign-top .position .position-img{
	width: 20rpx;
	float: left;
	margin-right: 10rpx;
	margin-top: 2.3%;
}
.citydesign-top .position .position-text{
	font-size: 28rpx;
}
.citydesign-top .position .position-text text{
	color: #00a0e9;
}
.citydesign-top .headimg{
	margin:auto;
	width: 20%;
	margin-top: -14%;
}
.citydesign-top .headimg image{
	border-radius: 100%;
}
.citydesign-top .name{
	width: 100%;
	margin:2% 0;
	text-align: center;
	margin-bottom: 3%;
}
.citydesign-top .name .username{
	font-size: 36rpx;
	font-weight: 900;
	color: #313131;
}
.citydesign-top .name image{
	width: 38rpx;
	/*margin-top: 1%;*/
	margin:0 1%;
	vertical-align: middle;
	display: inline-block;
}
.citydesign-top .name .sex-img{
	width: 45rpx;
}
.citydesign-top .name .duan-img{
	width: 35rpx;
}
.citydesign-top .name .duanwei{
	font-size: 30rpx;
	color: #313131;
}
.citydesign-top .toptext{
	font-size: 30rpx;
	text-align: center;
	width: 100%;
	color: #313131;
}
.view-list{
	background: #fff;
	margin-top: 3%;
}
.view-list .viewlist-title{
	padding:2.5% 0;
	overflow: hidden;
	border-bottom:2rpx solid #bfbfbf;
}
.view-list .viewlist-title text{
   display:block;
   width:2.1%;
   height:50rpx;
   background: #fff720;
   vertical-align: middle;
   margin-right: 2%;
   /*margin-top: -1%;*/
   float: left;
}
.view-list .viewlist-title  view{
	float: left;
	width:95%;
	font-size: 30rpx;
	overflow : hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
}
.view-listdata{
	margin-bottom: 3%;
}
.view-listdata:last-child{
	margin-bottom: 0%;
}
.view-listdata-title{
	overflow: hidden;
	width: 100%;
	padding:3% 4%;
	background: #fff;
}
.view-listdata-titleimg{
	width: 14%;
	float: left;
}
.view-listdata-titleimg image{
	border-radius: 100%;
}
.view-listdata-nickname{
	float: left;
	padding-top: 1%;
	margin-left: 3%;
}
.view-listdata-username{
	font-size: 30rpx;
	color: #00a0e9;
	margin-bottom: 8%;
}
.view-listdata-date{
	font-size: 22rpx;
	color: #626262;
}
.design-btn{
	float: right;
	color: #ec6941;
	text-align: center;
	font-size: 28rpx;
	border:2rpx solid #ec6941;
	margin-top: 3%;
	margin-right: 6%;
	padding:1% 0%;
	border-radius: 40rpx;
	width: 30%;
}
.view-listdata-des{
	padding:0 3%;
	text-align: left;
	font-size: 30rpx;
	color: #626262;
}
.view-listdata-des view{
	padding: 2% 0;
	border-bottom: 2rpx solid #bfbfbf;
}
.viewlist-bottom {
	overflow: hidden;
	padding:2.7% 3%;
}
.viewlist-bottom view{
	width:21%;
	float: left;
	margin-right: 0%;
	/*overflow: hidden;*/
}
.viewlist-bottom view image{
	width:40rpx;
	float: left;
	vertical-align: middle;
	margin-right: 5%;
	margin-top: 5%;
}
.viewlist-bottom .yue{
	float: right;
}
.viewlist-bottom .yue image{
	float: right;
	margin-right: 0;
}
.viewlist-bottom .yue text{
	float: right;
	margin-right: 3%;
}
.viewlist-bottom .dingwei{
	width: 70%;
}
.viewlist-bottom .dingwei image{
	width:28rpx;
	margin-top: 1%;
	margin-right: 1%;
}
.viewlist-bottom .ping image{
	width:34rpx;
	margin-top: 4%;
}
.viewlist-bottom text{
	font-size: 28rpx;
}
.zan-active{
	animation: spin .5s ease-in-out;
}
.nodata{
	margin-top: 3%;
	background: #fff;
	text-align: center;
	padding: 20% 0;
	font-size: 30rpx;
}
.Mb{
	position: fixed;
	top: 0%;
	left: 0%;
	width: 100%;
	height: 100%;
	background: rgba(0,0,0,0.8);
	z-index: 99;
}
.cityMb,.nocityMb{
	/*display: none;*/
	position: absolute;
	top: 0%;
	bottom: 0%;
	left: 0%;
	right: 0%;
	margin:auto;
	background: #fff;
	border-radius: .5rem;
	width: 70%;
	height: 9rem;
	padding:4%;
	padding-top: 6%;
}
.nocityMb{
	height: 7.5rem;
	padding-top: 10%;
}
.cityMb text{
	font-size: 30rpx;
	margin:0 1%;
	
}
.nocityMb text{
	font-size: 30rpx;
	margin:0 1%;
	color: #626262;
}
.yuyuebtn{
	background: #ec6941;
	color: #fff;
	width: 70%;
	margin:auto;
	text-align: center;
	margin-top: 6%;
	padding:2.5% 0;
	border-radius: 30rpx;
	font-size: 34rpx;
	letter-spacing: 5rpx;
}
.closeMb{
	position: absolute;
	top: 4%;
	right: 4%;
	width: 6%;
}
@-webkit-keyframes spin {
    0% {-webkit-transform: scale(1);}
    50% {-webkit-transform: scale(1.3);}
    100% {-webkit-transform: scale(1);}
}
.zan-text{
	color: #ec6941;
}