page{
	background: #fff;
}
.title{
	position: relative;
	padding:3% 0;
	border-bottom:2rpx solid #7d7d7d;
}
.title-text{
	font-size: 40rpx;
	text-align: center;
}
.back{
 position:absolute;
  top:22%;
  left:1%;
  width:5%;
  height: 30rpx;
  padding:2% 4%;
}
.next-step{
	position: absolute;
	top: 23%;
	right: 2%;
	background: #fff720;
	font-size: 26rpx;
	padding:1.5% 4%;
	border-radius: 30rpx;
}
.little-title{
	font-size: 36rpx;
	text-align: center;
	padding:3% 0;
	border-bottom: 2rpx solid #dfdfdf;
}
.little-title view{
	display: inline-block;
	font-size: 24rpx;
}
.little-title text{
	color: #ec6941;
}
.pick-box{
	padding:0% 5%;
	display: flex;
	height: 100rpx;
	line-height: 100rpx;
	border-bottom: 1rpx solid #bfbfbf;
}
.pick-box .label{
	width: 30%;
	font-size: 30rpx;
	color: #313131;
}
.pick-box .design-check{
	width: 70%;
}
.pick-box .label text{
	color: #ec6941;
}
.pick-box1{
	display: flex;
	padding:0% 5%;
	height: 100rpx;
	line-height: 100rpx;
	border-bottom: 2rpx solid #dfdfdf;
}
.pick-box1 .notic{
	width: 85%;
	font-size: 30rpx;
	color: #313131;
}
.pick-box1 .notic image{
	width: 32rpx;
	display: inline-block;
	vertical-align: middle;
	margin-top: -1%;
	margin-left: 3%;
}
.pick-box1 .switch{
	width: 60rpx;
}
.pick-box1 .switch switch{
	transform:scale(0.85)!important
}
.pick-box picker{
	width: 70%;
}
.Mb{
	position: fixed;
	top: 0%;
	bottom: 0%;
	left: 0%;
	width: 100%;
	height: 100%;
	z-index: 5;
	/*background: rgba(0,0,0,0.8);*/
}
.Mb .Mb-img{
	position: absolute;
	bottom: 15%;
	left: 0%;
	right: 0%;
	margin:auto;
	width: 80%;
	height: 230rpx;
	z-index: 6;
}
.Mb .Mb-img .close-x{
	position: absolute;
	top: 0%;
	right: 0%;
	width: 80rpx;
	height: 80rpx;
	/*background: #000;*/
	z-index: 7;
}
