	display: inline-block;
	font-size: 24rpx;
}
.little-title text{
	color: #ec6941;
}
.pick-box{
	padding:0% 3%;
	display: flex;
	height: 100rpx;
	line-height: 100rpx;
	border-bottom: 1rpx solid #bfbfbf;
}
.pick-box .label{
	width: 23%;
	font-size: 30rpx;
	color: #313131;
}
.pick-box .input{
	width: 80%;
}
.pick-box .input input{
	margin-top: 0%;
	padding:0 0 ;
	border:none;
	color: #313131;
	height: 100rpx;
	line-height: 100rpx;
}
