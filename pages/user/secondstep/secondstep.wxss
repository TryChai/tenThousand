  height: 30rpx;
  padding:2% 4%;
}
.next-step{
	position: absolute;
	top: 23%;
	right: 2%;
	background: #fff720;
	font-size: 26rpx;
	padding:1.5% 4%;
	border-radius: 30rpx;
}
.little-title{
	font-size: 36rpx;
	text-align: center;
	padding:3% 0;
	border-bottom: 2rpx solid #dfdfdf;
}
