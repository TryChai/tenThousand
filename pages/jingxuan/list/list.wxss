page{
	background: #eee;
}
.padding{
	padding-bottom:19%;
}
swiper{
	width:100%;
	height: 350rpx;
}
.tab-hot{
	/*margin-top: 1.5%;*/
	background: #fff;
	padding:3% 5%;
	height: 30rpx;
}
.tab-hot view{
	width:15%;
	display: inline-block;
}
.tab-hot view:nth-child(1){
	margin-right: 5%;
}
.view-list{
	background: #fff;
	margin-top: 3%;
}
.view-list .viewlist-title{
	padding:2.5% 0;
	overflow: hidden;
}
.view-list .viewlist-title text{
   display:block;
   width:2.1%;
   height:50rpx;
   background: #fff720;
   vertical-align: middle;
   margin-right: 2%;
   /*margin-top: -1%;*/
   float: left;
}
.view-list .viewlist-title  view{
	float: left;
	width:95%;
	font-size: 30rpx;
	overflow : hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
}
.viewlist-bottom {
	overflow: hidden;
	padding:2.7% 5%;
}
.viewlist-bottom view{
	width:21%;
	float: left;
	margin-right: 0%;
	/*overflow: hidden;*/
}
.viewlist-bottom view image{
	width:40rpx;
	float: left;
	vertical-align: middle;
	margin-right: 5%;
	margin-top: 5%;
}
.viewlist-bottom .zan image{
	width:34rpx;
	margin-top: 1%;
}
.viewlist-bottom .ping image{
	width:34rpx;
	margin-top: 4%;
}
.viewlist-bottom text{
	font-size: 28rpx;
}
.zan-active{
	animation: spin .5s ease-in-out;
}
@-webkit-keyframes spin {
    0% {-webkit-transform: scale(1);}
    50% {-webkit-transform: scale(1.3);}
    100% {-webkit-transform: scale(1);}
}
.zan-text{
	color: #ec6941;
}
.totop {
  position:fixed;
  bottom:6%;
  right:4%;
  width:75rpx;
}
